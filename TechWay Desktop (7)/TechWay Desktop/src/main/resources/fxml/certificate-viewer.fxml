<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.techway.coursemanagementdesktop.controller.CertificateViewerController">
    <top>
        <VBox spacing="20.0" style="-fx-background-color: #2c3e50; -fx-padding: 25;">
            <children>
                <!-- العنوان الرئيسي -->
                <HBox alignment="CENTER_LEFT" spacing="15.0">
                    <children>
                        <Label text="🏆" textFill="WHITE">
                            <font>
                                <Font size="28.0" />
                            </font>
                        </Label>
                        <Label text="شهاداتي" textFill="WHITE">
                            <font>
                                <Font name="Arial Bold" size="26.0" />
                            </font>
                        </Label>
                    </children>
                </HBox>

                <!-- شريط البحث والأدوات -->
                <HBox alignment="CENTER_LEFT" spacing="15.0">
                    <children>
                        <Label text="البحث عن شهادة:" textFill="WHITE">
                            <font>
                                <Font name="Arial" size="14.0" />
                            </font>
                        </Label>

                        <TextField fx:id="txtSearchCertificate" promptText="أدخل رقم الشهادة..." prefWidth="300.0" style="-fx-padding: 8; -fx-font-size: 14;" />

                        <Button fx:id="btnSearchCertificate" mnemonicParsing="false" text="بحث" style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-padding: 8 16; -fx-font-size: 14; -fx-border-radius: 5; -fx-background-radius: 5;">
                            <font>
                                <Font name="Arial" size="14.0" />
                            </font>
                        </Button>

                        <Region HBox.hgrow="ALWAYS" />

                        <Button fx:id="btnRefreshCertificates" mnemonicParsing="false" text="تحديث" style="-fx-background-color: #16a085; -fx-text-fill: white; -fx-padding: 8 16; -fx-font-size: 14; -fx-border-radius: 5; -fx-background-radius: 5;">
                            <font>
                                <Font name="Arial" size="14.0" />
                            </font>
                        </Button>
                    </children>
                </HBox>
            </children>
        </VBox>
    </top>

    <center>
        <StackPane>
            <children>
                <!-- قائمة الشهادات -->
                <ScrollPane fx:id="certificatesScrollPane" fitToWidth="true" style="-fx-background-color: #ecf0f1;">
                    <content>
                        <VBox fx:id="certificatesContainer" spacing="20.0" style="-fx-padding: 30;">
                            <!-- كروت الشهادات سيتم إضافتها برمجياً -->
                        </VBox>
                    </content>
                </ScrollPane>

                <!-- رسالة عدم وجود شهادات -->
                <VBox fx:id="noCertificatesContainer" alignment="CENTER" spacing="20.0" visible="false">
                    <children>
                        <Label text="📜" textFill="#7f8c8d">
                            <font>
                                <Font size="64.0" />
                            </font>
                        </Label>

                        <Label fx:id="lblNoCertificates" text="لا توجد شهادات حتى الآن" textAlignment="CENTER" textFill="#7f8c8d" wrapText="true">
                            <font>
                                <Font name="Arial" size="18.0" />
                            </font>
                        </Label>

                        <Label text="أكمل الكورسات واجتز الكويزات للحصول على الشهادات!" textAlignment="CENTER" textFill="#95a5a6" wrapText="true">
                            <font>
                                <Font name="Arial" size="14.0" />
                            </font>
                        </Label>
                    </children>
                    <StackPane.margin>
                        <Insets bottom="100.0" left="50.0" right="50.0" top="50.0" />
                    </StackPane.margin>
                </VBox>

                <!-- مؤشر التحميل -->
                <VBox alignment="CENTER" spacing="15.0" visible="false">
                    <children>
                        <ProgressIndicator fx:id="loadingIndicator" prefHeight="50.0" prefWidth="50.0" />
                        <Label text="جاري تحميل الشهادات..." textFill="#7f8c8d">
                            <font>
                                <Font name="Arial" size="14.0" />
                            </font>
                        </Label>
                    </children>
                </VBox>
            </children>
        </StackPane>
    </center>

    <bottom>
        <HBox alignment="CENTER" spacing="20.0" style="-fx-background-color: white; -fx-padding: 15; -fx-border-color: #bdc3c7; -fx-border-width: 1 0 0 0;">
            <children>
                <Label text="💡 نصيحة: يمكنك مشاركة رقم الشهادة مع الآخرين للتحقق من صحتها" textFill="#7f8c8d">
                    <font>
                        <Font name="Arial" size="12.0" />
                    </font>
                </Label>

                <Region HBox.hgrow="ALWAYS" />

                <Label text="إجمالي الشهادات: 0" textFill="#34495e">
                    <font>
                        <Font name="Arial Bold" size="12.0" />
                    </font>
                </Label>
            </children>
        </HBox>
    </bottom>
</BorderPane>