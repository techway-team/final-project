<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.techway.coursemanagementdesktop.controller.QuizTakingController">
    <top>
        <VBox spacing="15.0" style="-fx-background-color: #2c3e50; -fx-padding: 20;">
            <children>
                <!-- عنوان الكويز -->
                <Label fx:id="lblQuizTitle" text="عنوان الكويز" textFill="WHITE">
                    <font>
                        <Font name="Arial Bold" size="24.0" />
                    </font>
                </Label>

                <!-- وصف الكويز -->
                <Label fx:id="lblQuizDescription" text="وصف الكويز" textFill="#BDC3C7" wrapText="true">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Label>

                <!-- شريط معلومات -->
                <HBox alignment="CENTER_LEFT" spacing="30.0">
                    <children>
                        <Label fx:id="lblQuestionCounter" text="السؤال 1 من 10" textFill="WHITE">
                            <font>
                                <Font name="Arial Bold" size="14.0" />
                            </font>
                        </Label>

                        <Label fx:id="lblTimeRemaining" text="الوقت المتبقي: 30:00" textFill="#F39C12">
                            <font>
                                <Font name="Arial Bold" size="14.0" />
                            </font>
                        </Label>

                        <Region HBox.hgrow="ALWAYS" />

                        <ProgressBar fx:id="progressBar" prefWidth="200.0" progress="0.1" />
                    </children>
                </HBox>
            </children>
        </VBox>
    </top>

    <center>
        <ScrollPane fitToWidth="true" style="-fx-background-color: #ecf0f1;">
            <content>
                <VBox fx:id="questionContainer" spacing="20.0" style="-fx-padding: 30;">
                    <children>
                        <!-- كارت السؤال -->
                        <VBox spacing="15.0" style="-fx-background-color: white; -fx-padding: 25; -fx-border-radius: 10; -fx-background-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 8, 0, 0, 2);">
                            <children>
                                <!-- نص السؤال -->
                                <Label fx:id="lblQuestionText" text="نص السؤال سيظهر هنا..." wrapText="true">
                                    <font>
                                        <Font name="Arial" size="16.0" />
                                    </font>
                                </Label>

                                <!-- حاوية الخيارات -->
                                <VBox fx:id="optionsContainer" spacing="12.0" style="-fx-padding: 10 0 0 0;">
                                    <!-- الخيارات سيتم إضافتها برمجياً -->
                                </VBox>

                                <!-- الشرح (مخفي في البداية) -->
                                <VBox spacing="8.0">
                                    <children>
                                        <Label text="الشرح:" visible="false">
                                            <font>
                                                <Font name="Arial Bold" size="12.0" />
                                            </font>
                                        </Label>
                                        <TextArea fx:id="txtExplanation" editable="false" prefRowCount="3" wrapText="true" style="-fx-background-color: #f8f9fa; -fx-border-color: #e9ecef;" visible="false" />
                                    </children>
                                </VBox>
                            </children>
                        </VBox>
                    </children>
                </VBox>
            </content>
        </ScrollPane>
    </center>

    <bottom>
        <HBox alignment="CENTER" spacing="15.0" style="-fx-background-color: white; -fx-padding: 20; -fx-border-color: #bdc3c7; -fx-border-width: 1 0 0 0;">
            <children>
                <!-- أزرار التنقل -->
                <Button fx:id="btnPrevious" mnemonicParsing="false" text="السابق" style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-padding: 10 20; -fx-font-size: 14; -fx-border-radius: 5; -fx-background-radius: 5;">
                    <font>
                        <Font name="Arial" size="14.0" />
                    </font>
                </Button>

                <Button fx:id="btnSaveAnswer" mnemonicParsing="false" text="حفظ الإجابة" style="-fx-background-color: #f39c12; -fx-text-fill: white; -fx-padding: 10 20; -fx-font-size: 14; -fx-border-radius: 5; -fx-background-radius: 5;">
                    <font>
                        <Font name="Arial Bold" size="14.0" />
                    </font>
                </Button>

                <Region HBox.hgrow="ALWAYS" />

                <Button fx:id="btnNext" mnemonicParsing="false" text="التالي" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-padding: 10 20; -fx-font-size: 14; -fx-border-radius: 5; -fx-background-radius: 5;">
                    <font>
                        <Font name="Arial Bold" size="14.0" />
                    </font>
                </Button>

                <Button fx:id="btnSubmitQuiz" mnemonicParsing="false" text="إرسال الكويز" visible="false" style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-padding: 10 25; -fx-font-size: 14; -fx-border-radius: 5; -fx-background-radius: 5;">
                    <font>
                        <Font name="Arial Bold" size="14.0" />
                    </font>
                </Button>
            </children>
        </HBox>
    </bottom>
</BorderPane>